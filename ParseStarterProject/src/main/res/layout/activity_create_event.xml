<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.parse.starter.CreateEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/eventpicture"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:contextClickable="true"
                android:src="@drawable/clickme" />

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/cancel" />


        </RelativeLayout>

        <EditText
            android:id="@+id/eventname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="@color/maincolor"
            android:hint="Event name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textSize="22dp"
            android:textColorHint="@color/dim"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/time"
                    android:editable="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp" />

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/location"
                    android:editable="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp" />



                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/interest"
                    android:editable="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp" />


                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_column="0"
                    android:layout_marginTop="8dp"
                    android:layout_row="5"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/community"
                    android:editable="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp" />

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp" />

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp" />

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp" />


                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/edit"
                    android:editable="false"
                    android:paddingLeft="8dp"
                    android:paddingRight="50dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/containttexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/event_date"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:editable="false"
                        android:padding="8dp"
                        android:text="Date"
                        android:textColor="@color/dim" />

                    <TextView
                        android:id="@+id/event_time"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/white"
                        android:clickable="true"
                        android:editable="false"
                        android:padding="8dp"
                        android:paddingLeft="25dp"
                        android:text="Time"
                        android:textColor="@color/dim" />


                </LinearLayout>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:hint="Location"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dim" />


                <Spinner
                    android:id="@+id/interests_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:spinnerMode="dropdown" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/numberattendees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/minage"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/minage"
                        android:background="@android:color/white"
                        android:hint="Number of attendees"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dim" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:paddingRight="8dp">

                        <EditText
                            android:id="@+id/minage"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="15dp"
                            android:background="@android:color/white"
                            android:hint="Min. age"
                            android:inputType="number"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dim" />

                        <EditText
                            android:id="@+id/maxage"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="29dp"
                            android:layout_marginStart="29dp"
                            android:layout_toEndOf="@+id/minage"
                            android:layout_toRightOf="@+id/minage"
                            android:background="@android:color/white"
                            android:hint="Max. age"
                            android:inputType="number"
                            android:padding="8dp"
                            android:paddingLeft="25dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dim" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Attendees gender"
                        android:textColor="@color/dim"
                        android:textSize="18dp"
                        android:layout_marginLeft="15dp"
                        android:padding="8dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_column="1"
                        android:layout_marginTop="5dp"
                        android:layout_row="0"
                        android:paddingRight="8dp">

                        <CheckBox
                            android:id="@+id/malecb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="19dp"
                            android:layout_marginStart="19dp"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:buttonTint="@color/maincolor"
                            android:checked="true"
                            android:padding="8dp"
                            android:text="Men"
                            android:textColor="@color/dim"
                            android:onClick="itemClickedMale"/>

                        <CheckBox
                            android:id="@+id/femalecb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="31dp"
                            android:layout_marginStart="31dp"
                            android:layout_toEndOf="@+id/malecb"
                            android:layout_toRightOf="@+id/malecb"
                            android:background="@android:color/white"
                            android:buttonTint="@color/maincolor"
                            android:checked="true"
                            android:padding="8dp"
                            android:paddingLeft="25dp"
                            android:text="Women"
                            android:textColor="@color/dim"
                            android:onClick="itemClickedFemale"/>

                    </RelativeLayout>
                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/white"
                        android:hint="Description"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dim"
                        android:inputType="textMultiLine"
                    android:lines="8"
                    android:minLines="2"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:scrollbars="vertical" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp">


            <Button
                android:id="@+id/confirmbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton2"
                android:clickable="true"
                android:onClick="confirmz"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="Confirm"
                android:textColor="@color/maincolor" />


        </RelativeLayout>

    </LinearLayout>


</ScrollView>

